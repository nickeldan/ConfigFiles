export PS1='\[\e[0;36m\]\u\[\e[m\]@\[\e[0;32m\]\h\[\e[m\]:\[\e[0;31m\]\w/\[\e[m\] $ '
export EDITOR='vim'

for directory in $HOME/bin $HOME/.local/bin; do
    if echo $PATH | grep -v $directory > /dev/null; then
        PATH=$PATH:$directory
    fi
done
export PATH

alias l='ls -l --color=auto'
alias la='ls -lA --color=auto'
alias back='cd - > /dev/null'
alias up='cd ..'
alias upp='cd ../..'
alias gcc='gcc -fdiagnostics-color -Wall -Wextra'
alias ip='ip -c'
alias vi='vim'
alias pip='pip3'

cl() {
    cd $1 && ls -l --color=auto 
}

chat() {
    echo "Did you mean 'cat'?"
    false
}
